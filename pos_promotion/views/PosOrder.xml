<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_order_inherit_form" model="ir.ui.view">
            <field name="name">pos.order.promotion</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lines']//field[@name='full_product_name']" position="after">
                    <field name="coupon_program_id" optional="hide"/>
                    <field name="coupon_id" optional="hide"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>