<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-left-padding')]" position="after">
            <div class="pos-receipt-left-padding" t-if="line.coupon_code">
                Coupon Code: <t t-esc="line.coupon_code" />
            </div>
            <div class="pos-receipt-left-padding" t-if="line.coupon_program_name">
                Promotion/Coupon: <t t-esc="line.coupon_program_name" />
            </div>
        </xpath>
    </t>

</templates>
