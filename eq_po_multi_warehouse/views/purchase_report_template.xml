<?xml version="1.0"?>
<odoo>

	<!-- PDF Report -->
	<template id="inherit_report_purchaseorder_document"
		inherit_id="purchase.report_purchaseorder_document">

		<xpath expr="//table[hasclass('o_main_table')]//thead//th[1]"
			position="after">
			<th groups="stock.group_stock_multi_locations">
				Deliver To
			</th>
		</xpath>
		<xpath expr="//table[hasclass('o_main_table')]//tbody//td[1]"
			position="after">
			<td groups="stock.group_stock_multi_locations">
				<span t-field="line.picking_type_id" />
			</td>
		</xpath>
	</template>

</odoo>