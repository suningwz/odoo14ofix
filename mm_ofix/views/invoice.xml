<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_inherit_mm_account_move_form" model="ir.ui.view">
        <field name="name">view.inherit.mm.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet/group//group[last()]" position="inside">
                    <!-- fields -->
                    <field name="mm_envio" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                    <field name="mm_embalaje" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                    <field name="mm_destino" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
