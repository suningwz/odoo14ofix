<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Product Template form View to add page of presenation-->
       	<record id="product_template_presentation_form_view" model="ir.ui.view">
            <field name="name">product.template.presentation.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoicing']" position="after">
                    <page string="Sales Presentations">
                        <field name="uom_ids" editable="bottom">
                            <tree editable="bottom">
                                <field name="uom_id"/>
                                <field name="bar_code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
