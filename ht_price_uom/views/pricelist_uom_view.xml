<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--Price List items form View to add Uom -->
       	<record id="product_pricelist_item_uom_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.uom.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="before">
                	<field name="uom_id"/>
                </field>
            </field>
        </record>

        <!--Price List tree view to add uom -->
        <record id="product_pricelist_uom_form_views" model="ir.ui.view">
            <field name="name">product.pricelist.uom.form_view</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <field name="min_quantity" position="before">
                	<field name="uom_id"/>
                </field>
            </field>
        </record>

        <!--Price List item tree view from product to add uom -->
        <record id="product_pricelist_item_uom_tree_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.uom.tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
            <field name="arch" type="xml">
                <field name="min_quantity" position="before">
                    <field name="uom_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>